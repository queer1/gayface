<%= form_for [refinery, :gayface_users_admin, @gayface_user] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @gayface_user,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :last_name -%>
    <%= f.text_field :last_name  -%>

  </div>
  
  <div class='field'>
    <%= f.label :gayface_photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :gayface_photo_id,
               :image => @gayface_user.gayface_photo,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city  -%>

  </div>
  
  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state  -%>

  </div>
  
  <div class='field'>
    <%= f.label :sexual_id -%>
    <%= f.text_field :sexual_id  -%>

  </div>
  
  <div class='field'>
    <%= f.label :occupation -%>
    <%= f.text_field :occupation  -%>

  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:blurb].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/gayface_users/gayface_user", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:blurb].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.gayface_users.admin.gayface_users.gayface_user'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @gayface_user.first_name) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
