<% content_for :body_content_title do %>
  <%= @gayface_user.first_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%=raw @gayface_user.first_name %>
    </p>
  </section>
  <section>
    <h1>Last Name</h1>
    <p>
      <%=raw @gayface_user.last_name %>
    </p>
  </section>
  <section>
    <h1>Gayface Photo</h1>
    <p>
      <%= image_fu @gayface_user.gayface_photo, nil %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%=raw @gayface_user.city %>
    </p>
  </section>
  <section>
    <h1>State</h1>
    <p>
      <%=raw @gayface_user.state %>
    </p>
  </section>
  <section>
    <h1>Sexual</h1>
    <p>
      <%=raw @gayface_user.sexual_id %>
    </p>
  </section>
  <section>
    <h1>Occupation</h1>
    <p>
      <%=raw @gayface_user.occupation %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @gayface_user.blurb %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="gayface_users">
      <% @gayface_users.each do |gayface_user| %>
        <li>
          <%= link_to gayface_user.first_name, refinery.gayface_users_gayface_user_path(gayface_user) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
